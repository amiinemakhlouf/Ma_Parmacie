<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green"
    tools:context=".presentation.reminder.add_reminder.AddReminderFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_corner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/hello_blank_fragment"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/patient_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forms"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="Malade"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/patient_name_layout"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="@id/patient_name_tv"
           app:layout_constraintEnd_toEndOf="parent"
           app:boxStrokeColor="@color/black"
           app:boxBackgroundMode="filled"
           app:boxBackgroundColor="@color/white"
           android:backgroundTintMode="@color/white"

           app:layout_constraintStart_toStartOf="@id/medication_name_et"
           android:gravity="bottom"


           android:layout_marginEnd="10dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patient_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="jkkkkkkkk"
            android:paddingBottom="1dp"
            android:paddingTop="0dp"
            android:layout_gravity="bottom"




       />
       </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/medication_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:text="Médicament"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/medication_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/medication_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/medication_name_tv"
            app:layout_constraintTop_toBottomOf="@id/patient_name_layout"
            app:layout_constraintStart_toEndOf="@id/medication_name_tv"
            app:boxStrokeColor="@android:color/darker_gray"
            style="@style/MyDropDownMenu"

            app:boxBackgroundColor="@color/white"
            app:boxStrokeErrorColor="@color/white"
            app:endIconTint="#355E3B"
            android:layout_marginStart="10dp"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="4dp"


              >

        <AutoCompleteTextView
            android:id="@+id/medicineFormDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"

            android:inputType="none"
            android:ellipsize="end"

            />

        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/dosageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/medication_name_tv"
            app:layout_constraintTop_toBottomOf="@id/medication_name_tv"
            android:layout_marginTop="40dp"
            android:text="Dosage"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconDrawable="@android:drawable/ic_input_add"
            app:boxBackgroundColor="@color/white"
            app:endIconMode="custom"
           app:boxStrokeColor="@android:color/darker_gray"
            android:layout_marginEnd="4dp"
            app:endIconTint="@color/dark_green"
            android:paddingBottom="0dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="@id/medication_name_et"
            app:layout_constraintTop_toTopOf="@id/dosageTv"
            app:layout_constraintBottom_toBottomOf="@id/dosageTv"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dosageET"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textStyle="bold"

            android:paddingTop="0dp"
            android:paddingBottom="0dp"

            android:inputType="number"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/dosageTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/reminder_icon"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"



            />
     <!-->   <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dosageET"

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"


            /><-->




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstContainer"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"



        >
        <TextView
            android:id="@+id/reminder_start_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="20dp"
            android:text="Début"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reminder_start_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reminder_start_tv"
            app:layout_constraintBottom_toBottomOf="@id/reminder_start_tv"
            app:layout_constraintStart_toStartOf="@id/days_et"
            app:boxStrokeColor="@android:color/darker_gray"
            style="@style/MyDropDownMenu"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeErrorColor="@color/white"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="10dp"
            app:endIconTint="@color/dark_green"


            >

            <AutoCompleteTextView
                android:id="@+id/start_drop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true"
                android:text="aujourd'hui"
                android:inputType="none"
                android:ellipsize="end"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/days_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/reminder_start_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:text="Jours"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/days_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/days_tv"
            app:layout_constraintBottom_toBottomOf="@id/days_tv"
            app:boxStrokeColor="@android:color/darker_gray"
            style="@style/MyDropDownMenu"
            app:endIconTint="@color/dark_green"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeErrorColor="@color/white"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="10dp"
            >

        <AutoCompleteTextView
            android:id="@+id/days_drop_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:text="chaque jours"
            android:inputType="none"
            android:ellipsize="end"

            />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/days_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:text="Durée"
            android:textColor="@color/black"
            android:textStyle="bold"


            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/duration_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/duration_tv"
            app:layout_constraintBottom_toBottomOf="@id/duration_tv"
            app:layout_constraintStart_toStartOf="@id/days_et"
            style="@style/MyDropDownMenu"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeErrorColor="@color/white"
            app:endIconTint="@color/dark_green"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="10dp"
            android:layout_marginTop="10dp"

            >

            <AutoCompleteTextView
                android:id="@+id/duration_drop_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true"
                android:text="1 semaines"
                android:inputType="none"
                android:ellipsize="end"
                android:layout_marginBottom="20dp"

                />
        </com.google.android.material.textfield.TextInputLayout>


            









    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>