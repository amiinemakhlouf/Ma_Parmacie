<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Ma_Pharmacie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#000</item>

        <item name="android:navigationBarColor">@color/dark_green</item>





        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" >@color/dark_green</item>
        <!-- Customize your theme here. -->

        <!-- <item name="fontFamily">@font/montserrat</item> -->
        <item name="android:textSize">20sp</item>

        <item name="android:windowSplashScreenBrandingImage">@drawable/proxym</item>
        <item name="navigationViewStyle">@style/AppNavigationViewStyle</item>

    </style>

    <style name="simpleText" parent="Widget.MaterialComponents.TextView" />


    <style name="MyThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="fontFamily">@null</item>
        <item name="materialCalendarHeaderToggleButton">@style/timePickerIcon</item>

        <item name="materialCalendarHeaderTitle">@style/text</item>
        <item name="materialCalendarHeaderSelection">@style/CustomHeaderSelection</item>
        <item name="daySelectedStyle">@style/selected_day</item>


    </style>
    <style name="CustomHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/dark_green</item>


    </style>

    <style name="text" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dark_green</item>

    </style>

    <style name="timePickerIcon"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">

        <item name="android:tint">@color/dark_green</item>
    </style>

    <style name="selected_day"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemStrokeWidth">0dp</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>



</resources>