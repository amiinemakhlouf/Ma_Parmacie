<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    android:padding="25dp"
    tools:context=".presentation.donation.FilterDonationFragment"
    android:layout_gravity="center_horizontal"

    >

    <!-- TODO: Update blank fragment layout -->
    <RadioButton
        android:id="@+id/allDonations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:checked="true"
        android:textSize="16sp"
        android:text="Tout les dons" />
    <RadioButton
        android:id="@+id/otherDonations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="16sp"
        android:text="Dons partagÃ©s par autres utilisateurs"
        />

    <RadioButton
        android:id="@+id/myDonations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="16sp"
        android:text="Mes dons" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:backgroundTint="@color/dark_green"
        android:textSize="14sp"
        style="@style/applyBt"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/white"
        app:iconGravity="textStart"
        app:icon="@drawable/done"
        android:text="Appliquer"/>

</RadioGroup>