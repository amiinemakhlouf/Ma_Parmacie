<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.reset_password.ResetPasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/reset_password_image"
        android:text="@string/hello_blank_fragment" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:text="enter votre email et on va vous envoyer un nouveau mot de passe  Veuillez vérifier votre boîte de réception et votre dossier de spam si vous ne le trouvez pas. "
        app:layout_constraintTop_toBottomOf="@id/image"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailEt"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:boxStrokeColor="@color/dark_green"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        android:hint="Email"
        app:helperTextTextColor="@color/red"


        android:textColorHint="@null"
        app:hintTextColor="@color/dark_green"
        app:boxCornerRadiusTopEnd="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmBt"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        app:layout_constraintTop_toBottomOf="@id/emailEt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="envoyer mot de passe"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/dark_green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>