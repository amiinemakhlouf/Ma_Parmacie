<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyMedicineInputStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="colorControlActivated">@color/dark_green</item>
        <item name="boxStrokeColor">#355E3B</item>
        <item name="hintTextColor">#355E3B</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="iconTint">@color/black</item>




    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/dark_green</item>
    </style>

    <style name="MyDropDownMenu"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">#355E3B</item>
        <item name="boxStrokeColor">#355E3B</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeColor">@color/white</item>


    </style>
    <style name="MyDropDownMenuu"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:width">50dp</item>
        <item name="boxStrokeColor">#355E3B</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="iconTint">@color/black</item>

    </style>
    <style name="MyDropDownMenuAutoComplete"
        parent="@style/Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">#355E3B</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>

    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCursorStyle">
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="permission_dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Customize the background color of the dialog -->
        <item name="android:background">@color/white</item>

        <!-- Customize the text color of the title and message -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Customize the font family of the title and message -->

        <!-- Customize the button colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_green</item>

        <!-- Customize the size and style of the button text-->
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogNegativeButtonStyle</item>


    </style>

    <style name="MyDialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="shapeAppearanceOverlay">@style/MyDialogButtonShapeAppearanceOverlay</item>

    </style>

    <style name="MyDialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="MyDialogButtonShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/golden</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="applyBt" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">50dp</item>
        <item name="android:windowMinWidthMinor">50dp</item>
        <item name="android:windowBackground">@drawable/rounded_corner</item>

    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/light_green</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="roundedCornerImage">
        <item name="cornerSize">10%</item>

    </style>


</resources>