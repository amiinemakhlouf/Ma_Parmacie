<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:background="@drawable/child_reminder_background"
    android:layout_marginTop="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/medication_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginStart="25dp"
        android:src="@drawable/medication_exemple"
        />
    <TextView
        android:id="@+id/medication_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/medication_image"
        app:layout_constraintTop_toTopOf="@id/medication_image"
        android:text="Omega 3"

        />
    <TextView
        android:id="@+id/medication_Dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/medication_image"
        app:layout_constraintBottom_toBottomOf="@id/medication_image"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:text="2 pillules"

        />
    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/more"
        app:layout_constraintTop_toTopOf="@id/medication_name"
        app:layout_constraintBottom_toBottomOf="@id/medication_name"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        android:text="Amine"

        />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/patient_name"
        app:layout_constraintBottom_toBottomOf="@id/patient_name"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/delegate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:layout_marginEnd="15dp"
        android:text="Déléguer le rappel"

        />




</androidx.constraintlayout.widget.ConstraintLayout>